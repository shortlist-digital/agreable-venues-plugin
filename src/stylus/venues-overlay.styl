@import 'allure-breakpoints'
@import 'mixins'

.venues-overlay
  -webkit-overflow-scrolling touch
  background white
  overflow scroll
  overflow-x hidden
  padding 20px
  max-height 100%

  .venues-overlay-container--is-loading &
    background-image url(images/loading-ripple.gif)
    background-position: center center
    background-repeat no-repeat
    *
      display none

  h1
    font-size 32px
    line-height 35px
    margin 20px auto
    text-align center

  h2
    font-size 18px
    text-align center
    margin 0 0 16px
    line-height 1.5

  h3
    font-size 16px
    margin 0 0 16px
    text-align center

  p
    font-size 16px

@media smallDesktopsAndUp
  .venues-overlay
    padding 30px

.venues-overlay__phone-number
  border: 2px solid black;
  border-radius: 100%;
  float: left;
  height: 33px;
  margin-right: 10px;
  padding: 4px;
  width: 33px;

  @media smallDesktopsAndUp
    display none

.venues-overlay__img
  margin-bottom 16px
  img
    max-width 100%

.venues-overlay__types
  text-align center

.venues-overlay__types__type
  display inline-block
  font-size 16px

.venues-overlay__types__type:after
  content "\2022"
  padding 0 5px
  font-size 0.75em
  vertical-align middle
  position relative
  top -3px

.venues-overlay__types__type:last-child:after
  content ""

.venues-overlay__tags
  margin-bottom 16px

.venues-overlay__tags__tag
  background black
  border-radius 3px
  display inline-block
  color white
  font-size 12px
  margin-right 5px
  padding 3px

.venues-overlay__website
  text-align center
  margin-bottom 32px

.venues-overlay__website a
  font-size 14px

.venue-price
  text-align center
  margin-bottom 16px
  font-size 30px
  font-weight bold

.venue-price__item
  margin-right 5px
  opacity 0.25

.venue-price__item--active
  opacity 1

.venues-overlay__divider
  background 0 0
  border-bottom 1px solid #CCC
  margin 0 auto 32px

.venues-overlay__divider hr
  height 0
  border 0
  margin 0

.venues-overlay__social
  font-size 17px
  margin-bottom 32px

.venues-overlay__social__item
  display block
  height 30px
  width 100%
  position relative

.venues-overlay__social__item svg
  position absolute
  max-width 30px
  z-index 1

.venues-overlay__social__item a
  display block
  float left
  height 30px
  overflow hidden
  padding-left 30px
  width 100%
  line-height 30px
  -webkit-mask-image -webkit-gradient(linear, 90% top, right top, from(rgba(0,0,0,1)), to(rgba(0,0,0,0)))

.venues-closest
  background white
  ul
    list-style none
    margin 0
    padding 0
  li
    clear both
    + li
      margin-top 20px
  a
    display block
    overflow hidden
  img
    float left
    height auto
    margin 0 15px 0 0
    width 110px
  h3
    padding-top 5px
    text-align left
    @media smallDesktopsAndUp
      padding-top 10px

  .venues-search &
    display none
    padding-top 10px
    @media ipadsAndUp
      display block
      max-height 75vh
      overflow scroll
    li
      padding-bottom 10px
      + li
        border-top 1px solid #ccc
        margin 0
        padding-top 10px
    h2
      display none
    h3
      font-size 1rem
